<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/handlerInfo"
        android:layout_width="164dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="Hosting..."
        android:textColor="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="69dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:text="300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/handlerInfo" />

    <Button
        android:id="@+id/beginSeekButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="begin"
        app:layout_constraintStart_toEndOf="@+id/stopSeekButton"
        app:layout_constraintTop_toBottomOf="@+id/timerTextView" />

    <Button
        android:id="@+id/stopSeekButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:text="stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerTextView" />

    <Button
        android:id="@+id/restartSeekButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="restart"
        app:layout_constraintStart_toEndOf="@+id/beginSeekButton"
        app:layout_constraintTop_toBottomOf="@+id/timerTextView" />

    <TextView
        android:id="@+id/hintTextView"
        android:layout_width="42dp"
        android:layout_height="25dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:background="#03A9F4"
        android:text="hint:"
        android:textColor="#80000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beginSeekButton" />

    <TextView
        android:id="@+id/hintFieldTextView"
        android:layout_width="212dp"
        android:layout_height="22dp"
        android:layout_marginTop="28dp"
        android:text="empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toEndOf="@+id/hintTextView"
        app:layout_constraintTop_toBottomOf="@+id/beginSeekButton" />

    <TextView
        android:id="@+id/gameStatusSeekTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:background="#03A9F4"
        android:text="Game Status:"
        android:textColor="#86000000"
        android:textColorHighlight="#2196F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beginSeekButton" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="empty"
        app:layout_constraintStart_toEndOf="@+id/gameStatusSeekTextView"
        app:layout_constraintTop_toBottomOf="@+id/beginSeekButton" />

    <TextView
        android:id="@+id/pairedDeviceTitleTextView"
        android:layout_width="156dp"
        android:layout_height="29dp"
        android:layout_marginTop="28dp"
        android:text="PAIRED DEVICE:"
        android:textColor="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hintFieldTextView" />

    <TextView
        android:id="@+id/pairedDevice1TextView"
        android:layout_width="185dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pairedDeviceTitleTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>